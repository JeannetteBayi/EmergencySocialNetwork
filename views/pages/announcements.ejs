                            <textarea type="text" class="form-control" id="announcementArea" name="content" rows="3" placeholder="Write Announcement"></textarea>
                            <div class="mx-auto" style="height:10px;"></div>
                            <div class="btn-panel">
                                <button type="button" class="btn btn-primary mb-2" id="postAnnouncement">
                                    <strong>Create an announcement</strong>
                                </button>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
